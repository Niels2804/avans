{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "SassCompiler": {
      "Source": "Styles",
      "Target": "wwwroot/css",
      "Arguments": "--style=compressed",
      "GenerateScopedCss": true,
      "IncludePaths": [],
      
      "Compilations": [
          { "Source":  "wwwroot/scss", "Target":  "wwwroot/css" }
      ],

      "Configurations": {
          "Debug": { 
              "Arguments": "--style=expanded"
          }
      }
  }
}
